{
    "product_name": "Diligent WiFIRE (Rev D)",
    "product_chip": "PIC32MZ1024EFG144",
    "product_info": {
        "core": "m5150",
        "core_desc": "MIPS microAptiv M5150",
        "isa": "32r5",
        "isa_desc": "MIPS32 R5",
        "bits": "32",
        "ase": "mcu",
        "ram": "1024"
    },
    "toolchain": {
        "type": "mti-gcc-11.2.0",
        "type_desc": "MTI GCC (11.2.0)",
        "arch": {
            "desc": "目标处理器",
            "type": "selectable",
            "value_prefix": "-march=",
            "values": {
                 "mips32r2": "MIPS32 Release 2",
                 "mips32r5": "MIPS32 Release 5"
            },
            "default": "mips32r5",
            "apply_to": "cflags"
        },
        "abi": {
            "desc": "二进制 ABI",
            "type": "selectable",
            "value_prefix": "-mabi=",
            "values": {
                "32": "32 位 (32)"
            },
            "default": "32",
            "apply_to": "cflags"
        },
        "endianness": {
            "desc": "端序",
            "type": "selectable",
            "value_prefix": "-",
            "values": {
                "EL": "小端序",
                "EB": "大端序"
            },
            "default": "-EL",
            "apply_to": "cflags"
        },
        "float-abi-type": {
            "desc": "硬件浮点 ABI",
            "type": "selectable",
            "value_prefix": "-m",
            "values": {
                "soft-float": "软浮点",
                "hard-float": "硬浮点"
            },
            "default": "-msoft-float",
            "apply_to": "cflags"
        },
        "fpu-width": {
            "desc": "浮点寄存器宽度",
            "type": "selectable",
            "value_prefix": "-mfp",
            "values": {
                "32": "32 位宽",
                "64": "64 位宽",
                "xx": "自动探测默认值"
            },
            "default": "32",
            "apply_to": "cflags"
        },
        "nan-abi": {
            "desc": "浮点非数（NaN，Not-a-Number）编码方式",
            "type": "selectable",
            "value_prefix": "-mnan=",
            "values": {
                "2008": "2008（MIPS Release 5 或更高）",
                "legacy": "Legacy"
            },
            "default": "2008",
            "apply_to": "cflags"
        },
        "mips16": {
            "desc": "使用 MIPS16 特定应用扩展 (ASE)",
            "type": "selectable",
            "value_prefix": "-",
            "values": {
                "mips16": "是",
                "mno-mips15": "否"
            },
            "default": "no-mips16",
            "apply_to": "cflags"
        },
        "micromips": {
            "desc": "使用 microMIPS 特定应用扩展 (ASE)",
            "type": "selectable",
            "value_prefix": "-m",
            "values": {
                "micromips": "是",
                "no-micromips": "否"
            },
            "default": "micromips",
            "apply_to": "cflags"
        },
        "mcu": {
            "desc": "使用 MCU 特定应用扩展 (ASE)",
            "type": "selectable",
            "value_prefix": "-m",
            "values": {
                "mcu": "是",
                "no-mcu": "否"
            },
            "default": "mcu",
            "apply_to": "cflags"
        },
        "small-data-size-threshold": {
            "desc": "数据段大小阈值（字节）",
            "type": "unsigned_int",
            "value_prefix": "-G",
            "default": "0",
            "apply_to": "cflags"
        },
        "extra_cflags": {
            "desc": "编译器及汇编器选项",
            "flags": [""]
        },
        "extra_ldflags": {
            "desc": "链接器选项",
            "flags": ["-nostdlib", "-Lldscripts", "-Lldscripts/debug"]
        }
    },
    "template": {
        "type": "pic32mz",
        "type_desc": "PIC32MZ",
        "interface": "cmsis",
        "interface_desc": "CMSIS",
        "debugger": "openocd",
        "debugger_desc": "OpenOCD",
        "builder": "eide_unify", 
        "builder_desc": "unify_builder (EIDE)"
    }
}